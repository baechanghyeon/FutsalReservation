{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/function-component-definition": "off", // React 컴포넌트를 함수 표현식으로 만듦.
    "no-unused-vars": "warn", // 사용하지 않는 변수 error -> warn
    "import/no-unresolved": "off",
    "react/jsx-props-no-spreading": ["warn"],
    "react/prop-types":"off"
  }
}
